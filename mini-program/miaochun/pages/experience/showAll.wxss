.topBanner{
  width: 100%;
  height: 250rpx;
  background-size: 100% 100%;
}
.containers{
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-left: 23.1rpx;
  padding-right: 23.1rpx;
}
.loading{
  width: 100%;
  color: #999;
  font-size: 27.17rpx;
  text-align: center;
  line-height: 60rpx;
}
.loading text{
  margin-right: 10rpx;
}
.hideLoding{
  display: none;
}
.collect{
  width: 48%;
  height: 500rpx;
  border-radius: 10rpx;
  border: 1px solid #dfdfdf;
  margin-bottom: 17rpx;
  position: relative;
}
.collect .banner{
  width: auto;
  height: 330rpx;
  position: relative;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background-size: 100% 100%;
}
.price{
  position: absolute;
  left: 0;
  top: 280rpx;
  color: #B4282D;
  font-size: 28rpx;
  text-align: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  line-height: 48.31rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.detail{
  padding: 20rpx;
  position: relative;
}
.hot-recommend{
  position: absolute;
  left: 0;
  top: 40rpx;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  background-color: #4cc04b;
  padding: 6rpx 15rpx;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  z-index: 10;
}
.detail .title{
  font-size: 28rpx;
  word-break: break-all;
  height: 78rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detail .des{
  color: #9c9c9c;
  font-size: 20rpx;
  word-break: break-all;
  height: 55rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.collect .distance{
  position: absolute;
  right: 14rpx;
  bottom: 14rpx;
  color: #08b096;
  font-size: 24rpx;
}

.load-btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #f0f0f0;
}
.load-btn .iconfont{
  font-size: 44rpx;
  padding: 4rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-left: 27.78rpx;
  margin-right: 27.78rpx;
}
.load-btn .iconfont:last-child{
  font-weight: bold;
}
.more{
  width: 100%;
  height: 100%;
  color: #999;
  font-size: 26rpx;
  text-align: center;
}