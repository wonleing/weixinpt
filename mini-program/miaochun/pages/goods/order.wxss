.line {
  width: 100%;
  height: 10rpx;
  background: url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/address-bg-1579543565.png) repeat-x;
}
.info {
  font-size: 28rpx;
  padding: 40rpx;
  background: #FEFCEF;
}
.info-name {
  font-size: 32rpx;
}
.info-phone {
  margin-left: 22rpx;
}
.info-phone view:last-child {
  color: #666;
}
.br {
  background: #F4F4F4;
  height: 25rpx;
}
.list {
  padding: 30rpx 40rpx 10rpx;
  font-size: 28rpx;
}
.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 32rpx;
  border-bottom: 1px solid #d9d9d9;
  margin-bottom: 30rpx;
}
.item:last-child {
  border-bottom: 0;
  margin-bottom: 0;
}
.goods {
  padding: 40rpx;
  font-size: 28rpx;
}
.goods-title text:last-child {
  font-size: 24rpx;
  color: #7F7F7F;
}
.goods-title text:first-child {
  font-size: 30rpx;
  margin-right: 20rpx;
}
.goods-info image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.goods-title {
  margin-bottom: 20rpx;
}
.goods-name {
  padding-bottom: 5rpx;
}
.goods-type {
  padding: 10rpx 0 50rpx;
  font-size: 24rpx;
  color: #999;
}
.goods-num {
  font-size: 36rpx;
}
.handle {
  position: fixed;
  bottom: 0;
  background: #fff;
  font-size: 28rpx;
  color: #b4282d;
  width: 100%;
  border-top: 1px solid #d9d9d9;
}
.handle view:first-child {
  padding: 0 40rpx;
}
.handle view:last-child {
  width: 100rpx;
  background: #b4282d;
  border-top: 1px solid #b4282d;
  padding: 30rpx 60rpx;
  text-align: center;
  color: #fff;
}
.clause {
  padding: 20rpx 40rpx;
  background: #F4F4F4;
  font-size: 28rpx;
  padding-bottom: 100rpx;
  line-height: 80rpx;
}
.clause checkbox {
  transform: scale(.7);
}
.clause .clause-sure {
  color: #9d9d9d;
}
.clause .clause-info {}
