<!--myself.wxml-->
<view class="container">
  <view class="userinfo">
    <block>
      <view class='userName'>
          <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
      <view class='userImage'>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      </view>
    </block>
  </view>
  <view class='orderlist'>
    <view class='listName' bindtap='myorder'>
      <view>我的订单</view>
      <view class='iconfont icon-you'></view>
    </view>
    <view class='listName' bindtap='myproduct'>
       <view>我的收藏</view>
        <view class='iconfont icon-wode_mingxinpian'></view>
    </view>
    <view class='listName' bindtap='question'>
       <view>常见问题</view>
      <view class='iconfont icon-iconset0143'></view>
    </view>
    <view class='listName'>
      <view>
        <text class='text'>客服服务</text>
        <button open-type="contact" session-from='weapp'>1111</button>
      </view>
      <view class='iconfont icon-xiaoxizhongxin'></view>
    </view>
  </view>
</view>
